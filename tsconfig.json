{
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "node",
      "allowJs": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "jsx": "react-jsx",
      "baseUrl": "./",
      "outDir": "./build",
      "allowImportingTsExtensions": true,
      "noEmit": true,
      "paths": {
        "*": ["src/*"]
      }
    },

    "exclude": [
        "node_modules",
        "build",
        "**/*.js",
        "src/App/theme.ts"
    ],

    "include": ["src/**/*", "src/**/*.test.tsx"],
}